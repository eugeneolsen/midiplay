{
  "mcpServers": {
    "conport": {
      "command": "uvx",
      "args": [
        "--from",
        "context-portal-mcp",
        "conport-mcp",
        "--mode",
        "stdio",
        "--workspace_id",
        "${workspaceFolder}",
        "--log-file",
        "./logs/conport.log",
        "--log-level",
        "INFO"
      ],
      "alwaysAllow": [
        "export_conport_to_markdown",
        "log_decision",
        "update_active_context",
        "get_product_context",
        "get_active_context",
        "get_decisions",
        "get_progress",
        "log_progress",
        "update_product_context",
        "get_recent_activity_summary",
        "log_system_pattern"
      ]
    }
  }
}