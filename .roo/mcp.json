{
    "mcpServers": {
        "conport": {
            "command": "uvx",
            "args": [
                "--from",
                "context-portal-mcp",
                "conport-mcp",
                "--mode",
                "stdio",
                "--workspace_id",
                "${workspaceFolder}",
                "--log-file",
                "./logs/conport.log",
                "--log-level",
                "INFO"
            ]
        }
    }
}